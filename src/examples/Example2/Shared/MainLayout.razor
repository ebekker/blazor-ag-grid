@inherits LayoutComponentBase

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <div style="float: left;">
            Mode: <b>@MyApp.CurrentMode</b> <a href="#" @onclick="MyApp.ToggleMode">(toggle)</a>
        </div>
        <a href="https://github.com/ebekker/blazor-ag-grid" target="_blank"
           class="ml-md-auto">About BlazorAgGrid (v@(Version))</a>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>

@code {
    [CascadingParameter] public App MyApp { get; set; }

    static string Version;
    static MainLayout()
    {
        Version = typeof(AgGrid).Assembly.GetName().Version.ToString();
    }
}