@page "/fetchdata-inline"
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<p>Render Count: @renderCount</p>

<AgGrid WidthStyle="100%" HeightStyle="300px" Events="new GridEvents()">
        <GridColumn Header="Make" Field="make" />
        <GridColumn Header="Model" Field="model" />
        <GridColumn Header="Price" Field="price" />

        <GridRow Data="@(new { make = $"Toyota#{RenderCount()}", model = "Celica", price = 35000 })" />
        <GridRow Data="@(new { make = $"Ford#{RenderCount()}", model = "Mondeo", price = 32000 })" />
        <GridRow Data="@(new { make = $"Porsche#{RenderCount()}", model = "Boxter", price = 72000 })" />
</AgGrid>

@code {
    private int renderCount = 0;

    private int RenderCount()
    {
        return renderCount++;
    }

    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
